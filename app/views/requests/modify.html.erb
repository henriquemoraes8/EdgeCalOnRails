<%= form_for(@request, :url => {:action => 'send_modification_request', :id => @request.id}) do |f| %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title, :value => @request.request_map.event.title %>
</div>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description, :value => @request.request_map.event.description %>
</div>
<div class="field">
  <%= f.label :start_time %><br>
  <%= f.datetime_select :start_time, {:minute_step => 5, :default => @request.request_map.event.start_time} %>
</div>
<div class="field">
  <%= f.label :end_time %><br>
  <%= f.datetime_select :end_time, {:minute_step => 5, :default => @request.request_map.event.end_time} %>
</div>

<div class="actions">
  <%= f.submit "Submit", class: "button radius" %>
</div>

<% end %>