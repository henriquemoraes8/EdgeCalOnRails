<%= error_messages_for(@todo) %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</div>
<div class="field">
  <%= f.label :position, 'priority' %><br>
  <%= f.select :position, 1..@todo_count %>
</div>
<div class="field">
  <%= f.label :end_time %><br>
  <%= f.datetime_select :end_time %>
</div>
<div class="field">
  <%= f.label :recurrence %><br>
  <%= f.select :recurrence, ToDo.recurrences.keys, {:include_blank => true} %>
</div>


<div class="actions">
  <%= f.submit %>
</div>