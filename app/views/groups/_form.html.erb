<%=form_for @group do |f|%>

	<div class = "title">
		<%=f.label :title%>
		<%=f.text_field :title%>
	</div>

	<div class = "description">
		<%=f.label :description%>
		<%=f.text_field :description%>
	</div>

	<div class = "members">
		<h4>Choose Members</h4>
		<%@users.each do |user|%>
			<%= check_box('members', "#{user.id}") %>
			<%= user.email%>
			<br>
			<%#=f.label :members, user.email%>
			<%#= f.check_box :members%>
		<% end %>
	</div>

	<div class="actions">
		<%= f.submit 'Submit', class: "button radius"%>
	</div>

<%end%>