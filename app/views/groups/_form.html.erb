<%=form_for @group do |f|%>

	<div class = "title">
		<%=f.label :title%>
		<%=f.text_field :title%>
	</div>

	<div class = "description">
		<%=f.label :description%>
		<%=f.text_field :description%>
	</div>

	<div class = "memberships">
		<%for user in @users%>
			<%= label_tag user.name%>
			<%= check_box('members', "[#{user.id}]") %>
		<% end %>
	</div>

	<div class="actions">
		<%= f.submit 'Submit', class: "button radius"%>
	</div>

<%end%>